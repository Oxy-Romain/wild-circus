<form method="post" action="{{ path('price_delete', {'id': price.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this price?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ price.id) }}">
    <div class="btn-save">
        <button class="btn"><i class="far fa-trash-alt"></i> Delete</button>
    </div>
</form>
