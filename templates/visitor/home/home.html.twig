{% extends 'visitor/layout.html.twig' %}

{% block body %}
    <div class="container container-perform">
        <div class="perform-visitor" id="performPart">
            <h1>Perform</h1>
            <div class="container-card">
                {% for perform in performs %}
                    <div class="card">
                        <img src="https://via.placeholder.com/1850" class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{ perform.title }}</h5>
                            <p class="card-text">{{ perform.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="crew-visitor" id="crewPart">
        <h1>The crew</h1>
        <div class="container-crew">
            {% for member in members %}
                <div class="resize-member">
                    <div class="member member-box">
                        <img class="img-member img" src="{{ asset('build/placeholderUser.png') }}" alt="">

                        <h2 class="name-member name">{{ member.name }}</h2>
                        <h4 class="expertise-member expertise">{{ member.job }}</h4>
                        <h2 class="name-member name">Perform :</h2>
                        <h4 class="expertise-member expertise">{{ member.perform.title }}</h4>
                        <br>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container container-price">
        <div class="price-visitor" id="pricePart">
            <h1>Price</h1>
            <div class="container-card-price">
                <div class="unit-price">
                    <h2>Unit Price</h2>
                    {% for price in prices %}
                        {% if price.unit %}
                            <div class="price">
                                <h3>{{ price.target }}</h3>
                                <p>Week : {{ price.week }} $</p>
                                <p>Week-end + Wednesday : {{ price.weekend }} $</p>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="unit-price">
                    <h2>Groub Price</h2>
                    {% for price in prices %}
                        {% if price.unit == false %}
                            <div class="price">
                                <h3>{{ price.target }}</h3>
                                <p>Week : {{ price.week }} $</p>
                                <p>Week-end + Wednesday : {{ price.weekend }} $</p>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}